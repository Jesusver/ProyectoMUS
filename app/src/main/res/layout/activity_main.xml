<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F5FE"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generador de notas"
        android:textColor="@color/md_blue_500"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <LinearLayout
        android:id="@+id/LinearDesplegableOctavas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="100dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13">

        <Spinner
            android:id="@+id/spinnerOctavas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:divider="@drawable/divisor_botones"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearDesplegableOctavas">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Do" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Do#" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Re" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Re#" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mi" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fa#" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sol" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sol#" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="La" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="La#" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Si" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloAttack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ATTACK"
                android:textColor="@color/colorRuedas"
                android:textStyle="bold" />

            <com.example.prueba.CircularSeekBarPropia
                android:id="@+id/seekbarAttack"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:enabled="true"
                app:innerCircleColor="#e0f7e9"
                app:min="0"
                app:ringColor="@color/md_blue_500"
                app:ringWidth="0.7"
                app:showIndicator="true"
                app:showInnerCircle="true"
                app:showProgressText="false"
                app:speedMultiplier="2"></com.example.prueba.CircularSeekBarPropia>

            <TextView
                android:id="@+id/valorAttack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/colorRuedas" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloDecay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="DECAY"
                android:textColor="@color/colorRuedas"
                android:textStyle="bold" />

            <com.example.prueba.CircularSeekBarPropia
                android:id="@+id/seekbarDecay"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:enabled="true"
                app:innerCircleColor="#e0f7e9"
                app:min="0.3"
                app:ringColor="@color/md_blue_500"
                app:ringWidth="0.7"
                app:showIndicator="true"
                app:showInnerCircle="true"
                app:showProgressText="false"
                app:speedMultiplier="2"></com.example.prueba.CircularSeekBarPropia>

            <TextView
                android:id="@+id/valorDecay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/colorRuedas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloSustain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SUSTAIN"
                android:textColor="@color/colorRuedas"
                android:textStyle="bold" />

            <com.example.prueba.CircularSeekBarPropia
                android:id="@+id/seekbarSustain"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:enabled="true"
                app:innerCircleColor="#e0f7e9"
                app:min="1"
                app:ringColor="@color/md_blue_500"
                app:ringWidth="0.7"
                app:showIndicator="true"
                app:showInnerCircle="true"
                app:showProgressText="false"
                app:speedMultiplier="2"></com.example.prueba.CircularSeekBarPropia>

            <TextView
                android:id="@+id/valorSustain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/colorRuedas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RELEASE"
                android:textColor="@color/colorRuedas"
                android:textStyle="bold" />

            <com.example.prueba.CircularSeekBarPropia
                android:id="@+id/seekbarRelease"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:enabled="true"
                app:innerCircleColor="#e0f7e9"
                app:min="2"
                app:ringColor="@color/md_blue_500"
                app:ringWidth="0.7"
                app:showIndicator="true"
                app:showInnerCircle="true"
                app:showProgressText="false"
                app:speedMultiplier="2"></com.example.prueba.CircularSeekBarPropia>

            <TextView
                android:id="@+id/valorRelease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/colorRuedas" />

        </LinearLayout>
    </LinearLayout>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cambiaGeneracion"
        android:text="Aditiva/Karplus-Strong"
        android:textColor="@color/colorRuedas"
        app:layout_constraintBottom_toTopOf="@+id/LinearDesplegableOctavas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titulo" />

</androidx.constraintlayout.widget.ConstraintLayout>