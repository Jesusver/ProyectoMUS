<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generador de notas"
        android:textColor="#051E7E"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <LinearLayout
        android:id="@+id/LinearDesplegableOctavas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="100dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13">

        <Spinner
            android:id="@+id/spinnerOctavas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
           android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@drawable/divisor_botones"
        android:orientation="vertical"
        android:showDividers="middle|beginning|end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LinearDesplegableOctavas"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Do" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Do#" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Re" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Re#" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mi" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fa" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fa#" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sol" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sol#" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="La" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="@drawable/divisor_botones"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="La#" />

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Si" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:showDividers="middle"
        android:divider="@drawable/divisor_ruedas"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <com.akaita.android.circularseekbar.CircularSeekBar
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/seekbarAttack"
            app:enabled="true"
            app:innerCircleColor="#e0f7e9"
            app:min="0"
            app:max="1"
            app:progress="0"
            app:progressTextColor="@android:color/black"
            app:progressTextSize="10"
            app:ringColor="@color/colorAccent"
            app:ringWidth="0.7"
            app:showIndicator="true"
            app:showInnerCircle="true"
            app:showProgressText="true"
            app:speedMultiplier="2">

        </com.akaita.android.circularseekbar.CircularSeekBar>

        <com.akaita.android.circularseekbar.CircularSeekBar
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/seekbarDecay"
            app:enabled="true"
            app:innerCircleColor="#e0f7e9"
            app:min="0"
            app:max="100"
            app:progress="15"
            app:progressTextColor="@android:color/black"
            app:progressTextSize="15"
            app:ringColor="@color/colorAccent"
            app:ringWidth="0.5"
            app:showIndicator="true"
            app:showInnerCircle="true"
            app:showProgressText="true"
            app:speedMultiplier="2">

        </com.akaita.android.circularseekbar.CircularSeekBar>
        <com.akaita.android.circularseekbar.CircularSeekBar
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/seekbarSustain"
            app:enabled="true"
            app:innerCircleColor="#e0f7e9"
            app:min="0"
            app:max="10"
            app:progress="15"
            app:progressTextColor="@android:color/black"
            app:progressTextSize="15"
            app:ringColor="@color/colorAccent"
            app:ringWidth="0.7"
            app:showIndicator="true"
            app:showInnerCircle="true"
            app:showProgressText="true"
            app:speedMultiplier="2">

        </com.akaita.android.circularseekbar.CircularSeekBar>
        <com.akaita.android.circularseekbar.CircularSeekBar
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:id="@+id/seekbarRelease"
            app:enabled="true"
            app:innerCircleColor="#e0f7e9"
            app:min="0"
            app:max="100"
            app:progress="15"
            app:progressTextColor="@android:color/black"
            app:progressTextSize="15"
            app:ringColor="@color/colorAccent"
            app:ringWidth="0.5"
            app:showIndicator="true"
            app:showInnerCircle="true"
            app:showProgressText="true"
            app:speedMultiplier="5">

        </com.akaita.android.circularseekbar.CircularSeekBar>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>